extends layout
block content
    h1= title
    p Welcome to #{title}
    div !{message}
    form(method="post" action="/login")
        p
            label(for='user') 用户名
            input( type='text' name='user' id='user' )
        p
            label(for='pwd') 密码
            input( type='password' name='pwd' id='pwd' )
        input( type='submit' value='登录')